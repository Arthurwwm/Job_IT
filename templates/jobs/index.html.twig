{% extends 'base.html.twig' %}

{% block title %}Hello JobsController!{% endblock %}

{% block body %}
<h2>{{ nomCateg }}</h2>
<div class="row annonces">  
    {% for job in jobs %}
        <div class="card mb-3">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="images/logo/{{ job.logo }}" class="card-img" alt="{{ job.entreprise }}">
                </div>
                <div class="col-md-8">
                <div class="card-body">
                    <div class="card-header bg-transparent">{{ job.entreprise }}</div>
                    <h2 class="card-title">{{ job.intitule }}</h2>
                    <div class="card-footer bg-transparent"> {{ job.contrat }}, {{ job.lieu }}, {{job.pays}}</div>
                            <a href="">Voir la fiche</a>
                </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
